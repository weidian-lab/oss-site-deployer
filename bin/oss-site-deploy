#!/usr/bin/env node

const program = require('commander')
const path = require('path')
const Deployer = require('..')

const {
  REGION,
  ACCESSKEY,
  ACCESSKEY_SECRET,
  BUCKET
} = process.env

program
  .version(require('../package').version)
  .option('-r --region [value]', 'oss region', REGION || 'oss-cn-hangzhou')
  .option('-k --key [value]', 'oss accessKeyId default env ACCESSKEY', ACCESSKEY || '')
  .option('-s --secret [value]', 'oss accessKeySecret default env ACCESSKEY_SECRET', ACCESSKEY_SECRET || '')
  .option('-d --dir [value]', 'upload site dir', 'dist')
  .option('-b --bucket [value]', 'site oss prefix default env BUCKET', BUCKET || '')
  .option('-p --prefix [value]', 'site oss prefix', '')
  .option('-i --ignore [value]', 'ignore file')
  .option('-l --last [value]', 'last upload extname', 'html')

program
  .parse(process.argv)

async function start () {
  const { region, key, secret, dir, bucket, prefix, ignore, last } = program
  const deployer = new Deployer({
    region,
    accessKeyId: key,
    accessKeySecret: secret,
    bucket: bucket,
  })
  deployer.on('uploadedItem', ({ fileName }) => {
    console.info('uploaded ', fileName);
  })
  console.info(`deploying ${dir} to ${bucket} ${prefix}`)
  deployer
    .deploySite(path.resolve(dir), prefix, { ignore, sort: (fileName) => (!fileName.endsWith('.' + last) ? -1 : 1) })
}

start().then(() => {
  console.info('uploadedAll');
}, (err) => {
  console.error(err)
  process.exit(-1)
})
